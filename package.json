{
  "name": "super-soundboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:bot": "cd bot-node && npm run dev",
    "dev:web": "cd stt-web && npm run dev -- --host",
    "build": "npm-run-all build:*",
    "build:bot": "cd bot-node && npm run build",
    "build:web": "cd stt-web && npm run build",
    "start": "npm-run-all --parallel start:*",
    "start:bot": "cd bot-node && npm run start",
    "start:web": "cd stt-web && npm run preview -- --host",
    "init": "npm install && cd bot-node && npm install && cd ../stt-web && npm install",
    "postinstall": "cd bot-node && npm install && cd ../stt-web && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
